@model IEnumerable<MyBooksCart.Models.Products>

@{
    ViewBag.Title = "首頁";
}

<div class="jumbotron">
    <h1>MyBooks</h1>
    <div class="row">
        <div class="col-sm-6 col-sm-4">
            <ul class="nav nav-pills">
                <li><a href=@Url.Action("Index", "Home")>全部</a></li>
                @foreach (var item in (IEnumerable<MyBooksCart.Models.Categories>)ViewBag.categoryList)
                {
                    <li><a href=@Url.Action("Index", "Home", new { categoryId = @item.Id})>@item.Name</a></li>
                }
            </ul>
        </div>
    </div>
</div>

